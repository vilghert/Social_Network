<Window x:Class="Social_Network.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="450" Width="800" 
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid>
        <Border Background="#CCFFFFFF" Padding="20" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Margin="0,0,10,10">
                    <TextBlock Text="Email ID" FontWeight="Bold" />
                    <TextBox Text="{Binding Email}" Width="200" />

                    <TextBlock Text="Password" FontWeight="Bold" Margin="0,10,0,0" />
                    <PasswordBox PasswordChanged="PasswordBox_PasswordChanged" Width="200" />

                    <CheckBox Content="Remember me" Margin="0,10,0,0" />

                    <Button Content="LOGIN" Width="200" Margin="10,0,0,0" Click="LoginButton_Click" />

                    <TextBlock Text="Forgot Password?" FontSize="12" TextDecorations="Underline" 
                               Foreground="Blue" HorizontalAlignment="Center" Margin="0,5,0,0" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>